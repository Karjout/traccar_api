<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View device_summury_fleet form -->
    <record id="view_device_summury_fleet_form" model="ir.ui.view">
        <field name="name">view.device_summury_fleet.form</field>
        <field name="model">device_summury_fleet</field>
        <field name="arch" type="xml">
           <form string="Device Summary">
                <group string="Date Range">
                    <group col="2">
                        <field name="visible" invisible="1"/>
                        <field name="vehicule_id" invisible="1"/>
                        <field name="from_date" readonly="device_id == 0"/>
                    </group>
                    <group col="2">
                        <field name="to_date" readonly="device_id == 0"/>
                    </group>
                </group>
                <field name="message" invisible="visible" class="alert alert-danger"/>
                <group string="Summary Details" invisible="not visible">
                    <group>
                        <field name="device_name"/>
                        <field name="device_id"/>
                        <field name="distance"/>
                        <field name="average_speed"/>
                        <field name="max_speed"/>
                    </group>
                    <group>
                        <field name="spent_fuel"/>
                        <field name="start_odometer"/>
                        <field name="end_odometer"/>
                        <field name="engine_hours"/>
                    </group>
                </group>
                <footer>
                    <button name="get_device_summary" string="Fetch Summary" icon="fa-refresh" type="object" class="btn btn-primary" invisible="context.get('default_is_event_invisible') == 0"/>
                    <button name="get_traccar_event" string="Get Events" icon="fa-refresh" type="object" class="btn btn-primary" invisible="context.get('default_is_event_invisible')" />
                    <button special="cancel" class="oe_highlight btn-danger" icon="fa-archive" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action device_summury_fleet -->
    <record id="action_device_summury_fleet" model="ir.actions.act_window">
        <field name="name">Device_summury_fleet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">device_summury_fleet</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
