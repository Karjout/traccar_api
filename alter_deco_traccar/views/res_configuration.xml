<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_traccar_settings_view_form_res" model="ir.ui.view">
            <field name="name">res.config.settings.view.res.traccar</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Traccar" string="Traccar" name="traccar" logo="/alter_deco_traccar/static/description/icon.png" >
                        <header>
                        </header>
                        <!--BASE DE PARAMETRES-->
                        <div id="api_credentials">
                            <h2>Paramètres Traccar(Google Maps)</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="row mt12">
                                              <div class="col-6">
                                                  <label for="google_map_api_key" string="Clé API Google Maps" class="o_light_label"/>
                                                  <field name="google_map_api_key" class="oe_inline"/>
                                              </div>                                   
                                          </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </app>
            </xpath>
        </field>
    </record>
   
</data>
</odoo>
