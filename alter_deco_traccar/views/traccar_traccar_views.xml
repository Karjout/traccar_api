<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View traccar.traccar View List -->
    <record id="view_traccar_traccar_list" model="ir.ui.view">
        <field name="name">view.traccar.traccar.list</field>
        <field name="model">traccar.traccar</field>
        <field name="arch" type="xml">
            <list>
                <field name="traccar_name"/>
                <field name="traccar_session_url"/>
            </list>
        </field>
    </record>

    <!-- View traccar.traccar form -->
 <record id="view_traccar_traccar_form" model="ir.ui.view">
    <field name="name">view.traccar.traccar.form</field>
    <field name="model">traccar.traccar</field>
    <field name="arch" type="xml">
        <form string="Serveur Traccar">
            <header>
                <button string="Tester la connexion" type="object" icon="fa fa-connect" name="test_connection" class="btn-primary"/>
            </header>
            <sheet>
            <widget
                name="web_ribbon"
                title="Active"
                bg_color="bg-success"
                invisible="not active"
                />
                <widget
                name="web_ribbon"
                title="Inactif"
                bg_color="bg-danger"
                invisible="active"
                />
                <div class="oe_title">
                    <label for="traccar_name"/>
                    <h1>
                        <field name="traccar_name" placeholder="Nom du serveur..."/>
                    </h1>
                </div>
                <notebook>
                    <!-- Onglet Connexion -->
                    <page string="Connexion">
                        <group>
                            <group>
                                <field name="active" widget="boolean_toggle" string="Activer le serveur"/>
                                <field name="traccar_login" string="Login Account" placeholder="Entrer le login..."/>
                                <field name="traccar_password" string="Password" placeholder="Entrer le mot de passe..."/>
                                <field name="traccar_session_url" string="URL de session" placeholder="https://exemple.com/api/session"/>
                                <field name="web_socket_cookie" string="Cookie WebSocket" placeholder="Entrer le cookie..."/>
                                <field name="google_map_api_key" placeholder="Google Maps Api Key ...."/>
                                <field name="active_live_tracking" widget="boolean_toggle" string="Activer le suivi en temps réel"/>
                                <field name="web_socket_url" string="URL WebSocket" placeholder="wss://demo.traccar.org/api/socket" invisible="not active_live_tracking"/>
                            </group>
                        </group>
                    </page>
                    <!-- Onglet Informations -->
                    <page string="Informations">
                        <group>
                            <field name="traccar_description" string="Logs" placeholder="Détails sur ce serveur..."/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>


    <!-- View traccar.traccar search -->
    <record id="view_traccar_traccar_search" model="ir.ui.view">
        <field name="name">view.traccar.traccar.search</field>
        <field name="model">traccar.traccar</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Nom du serveur" name="traccar_name" domain="[]" context="{'group_by':'traccar_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action traccar.traccar -->
    <record id="action_traccar_traccar" model="ir.actions.act_window">
        <field name="name">Traccar Traccar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">traccar.traccar</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Traccar Traccar.
            </p>
        </field>
    </record>

</odoo>
